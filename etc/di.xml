<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="Oxipay-Payment-Gateway-Facade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Oxipay\Oxipay-Payment-Gateway\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Oxipay\Oxipay-Payment-Gateway\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">Oxipay-Payment-Gateway-ValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">Oxipay-Payment-Gateway-CommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="Oxipay-Payment-Gateway-Config" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Magento\Oxipay-Payment-Gateway\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with Oxipay-Payment-Gateway-Config -->
    <virtualType name="Oxipay-Payment-Gateway-Logger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">Oxipay-Payment-Gateway-Config</argument>
        </arguments>
    </virtualType>

    <type name="Oxipay\Oxipay-Payment-Gateway\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">Oxipay-Payment-Gateway-Logger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="Oxipay-Payment-Gateway-CommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">Oxipay-Payment-Gateway-AuthorizeCommand</item>
<!--                 <item name="capture" xsi:type="string">Oxipay-Payment-Gateway-CaptureCommand</item>
                <item name="void" xsi:type="string">Oxipay-Payment-Gateway-VoidCommand</item> -->
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="Oxipay-Payment-Gateway-AuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Oxipay-Payment-Gateway-AuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">Oxipay-Payment-Gateway-ResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Oxipay\Oxipay-Payment-Gateway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Oxipay\Oxipay-Payment-Gateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="Oxipay-Payment-Gateway-AuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Oxipay\Oxipay-Payment-Gateway\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">Oxipay\Oxipay-Payment-Gateway\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Oxipay\Oxipay-Payment-Gateway\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">Oxipay-Payment-Gateway-Config</argument>
        </arguments>
    </type>

