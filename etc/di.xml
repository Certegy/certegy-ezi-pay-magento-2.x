    <!-- Response handlers -->
    <virtualType name="Oxipay-Payment-Gateway-ResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Oxipay\Oxipay-Payment-Gateway\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Oxipay\Oxipay-Payment-Gateway\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="Oxipay-Payment-Gateway-ValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">Oxipay-Payment-Gateway-ConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Oxipay-Payment-Gateway-ConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Oxipay-Payment-Gateway-Config</argument>
        </arguments>
    </virtualType>

    <type name="Oxipay\Oxipay-Payment-Gateway\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">Oxipay-Payment-Gateway-Config</argument>
        </arguments>
    </type>

